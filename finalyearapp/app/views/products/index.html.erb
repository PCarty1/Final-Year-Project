<h1>Listing products</h1>

<%= will_paginate @products, renderer: BootstrapPagination::Rails %>


<table class="table table-condensed">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image</th>
    <th>Price</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.description %></td>
    <td><%= image_tag(product.image, :size => "50x50") %></td>
    <td><%= euro(product.price) %></td>
    <td><%= product.quantity %></td>
    <td><%= link_to 'Show', product, class: "btn btn-default" %></td>
    <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-default" %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path, class: "btn btn-small btn-primary" %>
