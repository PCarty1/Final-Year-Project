    <%= f.label :image if @pic.image? %><br />
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :feeling %><br />
	<%= f.select :feeling, ["Happy", "Delighted", "Proud", "Overjoyed", "Dissapointed", "Exhausted"] %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
	<%= f.select :location, ["Stand", "Pitchside", "Bench", "Fan Section", "Hill View"] %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
