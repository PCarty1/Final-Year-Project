<h1>Listing Fixtures</h1>


<%= will_paginate @fixtures, renderer: BootstrapPagination::Rails %>

<table class="table table-condensed">
  <tr>
    <th>Datetime</th>
    <th>Winningscore</th>
    <th>Losingscore</th>
    <th>Hometeam</th>
    <th>Awayteam</th>
    <th>Winningteam</th>
    <th>Report</th>
    <th>Venue</th>
    <th>Competition</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fixtures.each do |fixture| %>
  <tr>
    <td><%= fixture.datetime.strftime "%m %b %Y, %l.%M %p " %></td>
    <td><%= fixture.winningscore %></td>
    <td><%= fixture.losingscore %></td>
    <td><%= fixture.hometeam.name %></td>
    <td><%= fixture.awayteam.name %></td>
    <td><%= fixture.winningteam_id %></td>
    <td><%= fixture.report %></td>
    <td><%= fixture.venue %></td>
    <td><%= fixture.competition.name %></td>
    <td><%= link_to 'Show', fixture, class: "btn btn-default" %></td>
    <td><%= link_to 'Update Result', edit_fixture_path(fixture), class: "btn btn-default" %></td>
    <td><%= link_to 'Delete Fixture', fixture, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Fixture', new_fixture_path, class: "btn btn-small btn-primary" %>
