<%= form_for(@player) do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :dateofbirth %><br />
    <%= f.text_field :dateofbirth, id: :datepicker %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
	<%= f.radio_button(:gender, "Male") %> Male
	</br>
	<%= f.radio_button(:gender, "Female") %> Female
  </div>
  <div class="field">
    <%= f.label :squadnumber %><br />
    <%= f.number_field :squadnumber %>
  </div>
  <div class="field">
    <%= f.label :position %><br />
    <%= f.select :position,["Hooker", "Second Row", "Prop", "Number 8", "Scrum Half", "Fly Half", "Centre", "Back"]%>
  </div>
  <div class="field">
    <%= f.label :height %><br />
    <%= f.text_field :height %>
  </div>
  <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </div>
  <div class="field">
    <%= f.label :team_id %><br />
	<%= f.collection_select :team_id, Team.all, :id, :name %> 

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
