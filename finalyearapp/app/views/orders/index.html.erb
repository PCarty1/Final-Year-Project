<h1>Listing orders</h1>

<table class="table table-condensed">
  <tr>
    <th>User</th>
    <th>Paymethod</th>
    <th>Total</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.user_id %></td>
    <td><%= order.paymethod %></td>
    <td><%= order.total %></td>
    <td><%= link_to 'Show', order, class: "btn btn-default" %></td>
    <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-default" %></td>
    <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Order', new_order_path, class: "btn btn-small btn-primary" %>
