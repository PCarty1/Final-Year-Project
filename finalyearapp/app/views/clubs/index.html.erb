<h1>Listing Clubs</h1>


<%= will_paginate @clubs, renderer: BootstrapPagination::Rails %>

<table class="table table-condensed">
  <tr>
    <th>Name</th>
    <th>Homeground</th>
    <th>Location</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Crest</th>
    <th>Info</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clubs.each do |club| %>
  <tr>
    <td><%= club.name %></td>
    <td><%= club.homeground %></td>
    <td><%= club.location %></td>
    <td><%= club.email %></td>
    <td><%= club.phone %></td>
    <td><%= image_tag(club.crest, :size => "50x50") %></td>
    <td><%= club.info %></td>
    <td><%= link_to 'Show', club, class: "btn btn-default" %></td>
    <td><%= link_to 'Edit', edit_club_path(club), class: "btn btn-default" %></td>
    <td><%= link_to 'Delete Club', club, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Club', new_club_path, class: "btn btn-small btn-primary" %>