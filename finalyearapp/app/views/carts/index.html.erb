  </tr>

<% @carts.each do |cart| %>
  <tr>
    <td><%= link_to 'Show', cart, class: "btn btn-default" %></td>
    <td><%= link_to 'Edit', edit_cart_path(cart), class: "btn btn-default" %></td>
    <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
  </tr>
<% end %>
</table>

